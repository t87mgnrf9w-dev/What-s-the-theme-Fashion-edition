<body>

    <h1>What's the theme? ðŸ‘—âœ¨</h1>

    <input id="themeInput" type="text" placeholder="Type a theme...">
    <button onclick="generateImage()">Turn Look</button>

    <div id="result"></div>

    <script>
        function generateImage() {
            let theme = document.getElementById("themeInput").value;
            let resultDiv = document.getElementById("result");

            if (theme.trim() === "") {
                resultDiv.innerHTML = "<p>Please enter a theme ðŸ’œ</p>";
                return;
            }

            // Always returns fashion / model / runway images
            let imageUrl = `https://image.pollinations.ai/prompt/${encodeURIComponent(theme + " fashion runway model full body outfit high quality runway photo")}`;

            resultDiv.innerHTML = `
                <p>Theme: <strong>${theme}</strong></p>
                <img src="${imageUrl}" alt="Outfit Image">
            `;
        }
    </script>

